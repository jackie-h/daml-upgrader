module Intro.SchemaWithData where

import Data.Core(Money,Wallet)
import Data.Claim(Claims)

template ContractWithData
  with
    issuer : Party
    owner : Party
    money : Money
  where
    signatory issuer, owner

template ContractWithType
  with
    issuer : Party
    owner : Party
    amount : Decimal
    claims : Claims
  where
    signatory issuer, owner

template ContractWithDataList
  with
    issuer : Party
    owner : Party
    money : [Money]
  where
    signatory issuer, owner

template ContractWithTupleDataType
  with
    issuer : Party
    owner : Party
    wallet : Wallet
  where
    signatory issuer, owner